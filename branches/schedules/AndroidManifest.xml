<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.roozen.SoundManager" android:versionCode="17" android:versionName="1.2.5">
	<application android:icon="@drawable/sound_icon"
		android:debuggable="true" android:label="@string/app_name">
		<activity android:name=".MainSettings">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.roozen.intent.SOUND_CONTROL" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<service android:name="com.roozen.SoundManager.services.ChangeVolume"></service>
		<receiver android:name="com.roozen.SoundManager.receivers.Bootup">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
		<service android:name="com.roozen.SoundManager.services.BootupService"></service>
		<activity android:name="RingmodeToggle">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.roozen.intent.RINGMODE_CONTROL" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name="VibrateSettings">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.roozen.intent.VIBRATION_CONTROL" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="VolumeDialog" android:theme="@android:style/Theme.Dialog">
			<intent-filter>
				<action android:name="com.roozen.intent.VOLUME_CONTROL" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<receiver android:name="com.roozen.SoundManager.receivers.SoundTimer"></receiver>
		<provider android:name="com.roozen.SoundManager.provider.PreferenceProvider"
			android:authorities="com.roozen.SoundManager.provider.PreferenceProvider"></provider>
		<activity android:name="MuteActivity" android:label="Sound Manager v1.2.0">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
	</application>

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>
	<uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"></uses-permission>
</manifest> 